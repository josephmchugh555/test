-- This function calculates payroll for the mysql database based on the column values
DELIMITER //

create FUNCTION Payroll_Calculation()
RETURNS DECIMAL(10,2)
DETERMINISTIC
BEGIN
    DECLARE HourlySalary DECIMAL(10,2);
    DECLARE WeeklyHours DECIMAL(10,2);
    DECLARE Result DECIMAL(10,2);

    SELECT Hourly_pay, Weekly_Hours_Worked
    INTO HourlySalary, WeeklyHours
    FROM training.greggs_employees;

    SET Result = HourlySalary * WeeklyHours;

    RETURN Result;
END //

DELIMITER ;
